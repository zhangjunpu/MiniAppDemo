/* components/tab-bar/tab-bar.wxss */
.tabbar {
	background: #e3e4e5;
	display: flex;
	align-items: center;
}

.tabitem {
	flex: 1;
	text-align: center;
	height: 80rpx;
	line-height: 80rpx;
	color: #333;
}

.tabitem-active {
	color: red;
}

.tabitem-active text {
	padding: 12rpx 20rpx;
	border-bottom: 6rpx solid red;
}

.tabitem-sel {
	color: red;
}
